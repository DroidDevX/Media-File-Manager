<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/file_item_padding"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:contentDescription="file loading..."
            android:layout_weight="0.1"
            android:id="@+id/linearlayout_ImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/linearlayout_TitleTV"
            android:layout_weight="0.9"
            tools:text="Insert file name here"
            android:textSize="@dimen/file_item_title_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

</LinearLayout>

