<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FolderDetailActivity">

    <LinearLayout
        android:id="@+id/appBarLayout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <com.example.filemanager.CustomViews.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent"/>

        <com.example.filemanager.CustomViews.FileItemOptionsMenu
            android:id="@+id/fileItemOptionsMenu"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fileRecyclerview"
        android:layout_marginTop="@dimen/fileActivity_recyclerview_marginTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/fileActivity_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:itemCount="20"
        tools:listitem="la" />

</androidx.constraintlayout.widget.ConstraintLayout>